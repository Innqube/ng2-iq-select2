{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers":false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "component.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}